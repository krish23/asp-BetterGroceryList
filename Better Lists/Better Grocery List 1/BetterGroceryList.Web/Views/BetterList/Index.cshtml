@model IEnumerable<BetterGroceryList.Web.Models.BetterList>

@{
    ViewBag.Title = "List of Grocery Lists";
}

<h2>List of Grocery Lists</h2>

<p>
    @Html.ActionLink("Create New", "CreateList")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
           @* @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })|*@
            @Html.ActionLink("View", "../BetterListItem/ListView", new { id = item.Id }) |
            @Html.ActionLink("Share List", "ShareList", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
